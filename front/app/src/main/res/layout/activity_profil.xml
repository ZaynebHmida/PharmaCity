<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.pharmacity.Profil"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/profill">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"

        android:onClick="openAndroidBottomMenu"
        android:src="@drawable/ic_menu"
        android:background="#7FDD4C" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:id="@+id/imageView6" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choisir photo"
                android:id="@+id/button20" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:hint="      CIN : "
                android:enabled="false"
                android:id="@+id/editText5"

                />

            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/EditText3"
                    android:hint=" Nom :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:minWidth="350dp"
                    android:drawableLeft="@drawable/ic_perm_identity"
                    android:drawableStart="@drawable/ic_perm_identity"
                    android:textCursorDrawable="@null"
                    />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/EditText4"
                android:hint=" Prenom:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:minWidth="350dp"
                android:drawableLeft="@drawable/ic_person"
                android:drawableStart="@drawable/ic_person"
                android:textCursorDrawable="@null"
                />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/EditText5"
                android:hint=" Email :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:minWidth="350dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawableStart="@drawable/ic_email"
                android:textCursorDrawable="@null"
                />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/EditText6"
                android:hint=" Téléphone :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:minWidth="350dp"
                android:drawableLeft="@drawable/ic_local_phone"
                android:drawableStart="@drawable/ic_local_phone"
                android:textCursorDrawable="@null"
                />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/EditText7"
                android:hint=" Adresse :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:minWidth="350dp"
                android:drawableLeft="@drawable/ic_home"
                android:drawableStart="@drawable/ic_home"
                android:textCursorDrawable="@null"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Identifiant :"

                android:id="@+id/editText3"
                android:layout_weight="0.13"
                android:drawableLeft="@drawable/ic_account_box"
                android:drawableStart="@drawable/ic_account_box"
                android:textCursorDrawable="@null"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint=" Mot de passe :"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.13"
                android:drawableLeft="@drawable/ic_lock"
                android:drawableStart="@drawable/ic_lock"
                android:textCursorDrawable="@null"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Confirmer Mot de passe :"
                android:drawableLeft="@drawable/ic_lock"
                android:drawableStart="@drawable/ic_lock"
                android:ems="10"
                android:id="@+id/editText18"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modifier"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal"
                android:background="#7FDD4C" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
