<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.admin.pharmacity.Ordonnance"
    android:background="@drawable/ordonnance">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openAndroidBottomMenu"
        android:id="@+id/imageButton10"
        android:src="@drawable/ic_menu"
        android:background="#7FDD4C" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="#7f807f"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Choisir Ordonnance"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="170dp"
        android:adjustViewBounds="true"
        android:id="@+id/imageView5"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#7f807f"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Envoyer"
        android:id="@+id/button16"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
